<!--Home(ログイン後)-->
<div class="body">
  <div class="container">
    <% if flash[:notice] %>
      <p class="notice"></p>
      <p><%= flash[:notice] %></p>
    <% end %>
    <div class="row">

      <div class="col-xs-3">
        <%= render partial: "users/profile" %>
        <%= render partial: "books/new" %>
      </div>

      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %></td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>