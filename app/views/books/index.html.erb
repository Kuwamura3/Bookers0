<!--Books-->
<div class="body">
  <div class="container">
    <div class="row">
      <% if flash[:notice] %>
        <p class="notice"><%= flash[:notice] %></p>
      <% end %>
      <% if @book.errors.any? %>
        <div class="alert">
          <h2 class="error_explanation">Following errors prohibited this book from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="col-xs-3">
        <%= render partial: "users/profile" %>
        <%= render partial: "books/new" %>
      </div>
      <div class="col-xs-9">
        <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
                </td>
                <td>
                  <%= link_to book.title, book_path(book) %>
                </td>
                <td>
                  <%= book.body %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
