<!--Books-->
<div class="body">
  <div class="container">
    <div class="row">
      <% if flash[:notice] %>
        <p class="notice"><%= flash[:notice] %></p>
      <% end %>


      <div class="col-xs-3">
        <h2>User info</h2>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <% if @book.user.id == current_user.id %>
          <%= link_to "", edit_user_path(@book.user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
        <% end %>
        <%= render partial: "books/new" %>
      </div>

      <div class="col-xs-9">
        <h2>Book detail</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
              <tr>
                <td>
                  <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
                </td>
                <td>
                  <%= link_to @book.title, book_path(@book) %>
                </td>
                <td>
                  <%= @book.body %>
                </td>
                <% if @book.user == current_user %>
                  <td>
                    <%= link_to "edit", edit_book_path(@book), class: "btn-sm btn-success" %>
                  </td>
                <% end %>
                <% if @book.user == current_user %>
                  <td>
                    <%= link_to "delete", book_path(@book), class: "btn-sm btn-danger", method: :delete %>
                  </td>
                <% end %>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
