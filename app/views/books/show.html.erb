<!--Books-->
<div class="body">
  <div class="container">
    <% if flash[:notice] %>
      <p class="notice"></p>
      <p><%= flash[:notice] %></p>
    <% end %>
    <div class="row">

      <div class="col-xs-3">
        <h2>User info</h2>

        <%= attachment_image_tag @book2.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "profile-img", fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @book2.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @book2.user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <% if @book2.user.id == current_user.id %>
            <%= link_to "", edit_user_path(@book2.user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
          <% end %>
        </div>
        <%= render partial: "books/new" %>
      </div>

      <div class="col-xs-9">
        <h2>Book detail</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
              <th>User</th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
              <tr>
                <td>
                  <%= link_to user_path(@book2.user) do %>
                    <%= attachment_image_tag @book2.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
                    <%= @book2.user.name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to @book2.title, book_path(@book2) %>
                </td>
                <td>
                  <%= @book2.body %>
                </td>
                <% if @book2.user == current_user %>
                  <td>
                    <%= link_to "Edit", edit_book_path(@book2), class: "btn-sm btn-success" %>
                  </td>
                <% end %>
                <% if @book2.user == current_user %>
                  <td>
                    <%= link_to "Destroy", book_path(@book2), class: "btn-sm btn-danger", method: :delete, "data-confirm" => "Are you sure?" %>
                  </td>
                <% end %>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
