<h2>New book</h2>

<%= form_with model:@book, local:true do |f| %>

  <div class="field row">
    <%= f.label :Title %>
    <%= f.text_field :title, class: "book_title col-xs-12" %>
  </div>

  <div class="field row">
    <%= f.label :Opinion %>
    <%= f.text_area :body, class: "book_opinion col-xs-12" %>
  </div>

  <div class="actions row">
    <%= f.submit 'Create Book', class: "col-xs-12 btn btn-primary" %>
  </div>

<% end %>