<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1>Editing Book</h1>

        <%= form_with model:@book, local: true do |f| %>

          <% if @book.errors.any? %>
            <div id="error_explanation">
              <h3>Following errors prohibited this book from being saved:</h3>
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field row">
            <%= f.label :Title %>
            <%= f.text_field :title, class: "book_title col-xs-12" %>
          </div>

          <div class="field row">
            <%= f.label :Opinion %>
            <%= f.text_area :body, class: "book_opinion col-xs-12" %>
          </div>

          <div class="actions row">
            <%= f.submit 'Update book', class: "col-xs-12 btn btn-primary" %>
          </div>

        <% end %>

        <%= link_to "Show", book_path(@book2) %> | <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>
